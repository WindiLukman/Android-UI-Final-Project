<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background">

    <ScrollView
        android:id="@+id/detailScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/home_text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="@string/game_title_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/gameImage"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:background="@color/home_card"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:contentDescription="@string/content_desc_game_cover" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingBottom="8dp">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/tagGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleLine="true"
                            app:singleSelection="false"
                            app:chipSpacingHorizontal="8dp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/developerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/developer_label"
                        android:textColor="@color/home_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/developerValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:text="@string/developer_placeholder" />

                    <TextView
                        android:id="@+id/publisherLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publisher_label"
                        android:textColor="@color/home_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/publisherValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:text="@string/publisher_placeholder" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bookmarkButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/bookmark"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/home_nav_active"
                        app:icon="@drawable/ic_bookmark_border"
                        app:iconPadding="8dp"
                        app:iconTint="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:text="@string/description_placeholder" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/home_divider" />

            <TextView
                android:id="@+id/audienceScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/audience_score"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/starRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ratingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/rating_value_placeholder"
                    android:textColor="@color/home_text_primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ratingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif"
                    android:text="0"
                    android:textColor="@color/home_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/audienceReviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/audience_reviews"
                    android:textColor="@color/home_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/home_divider" />

                <TextView
                    android:id="@+id/gameDiscussions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/game_discussions"
                    android:textColor="@color/home_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/reviewsDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/home_divider" />

            <LinearLayout
                android:id="@+id/audienceReviewsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/reviewsEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/audience_reviews_empty"
                    android:textColor="@color/home_text_secondary"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/reviewsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/discussionsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/discussionReplying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/home_nav_active"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:paddingBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/home_surface"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <EditText
                        android:id="@+id/discussionInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/discussion_new_comment"
                        android:textColor="@color/home_text_primary"
                        android:textColorHint="@color/home_text_hint"
                        android:textSize="13sp"
                        android:maxLines="3"
                        android:inputType="textMultiLine" />

                    <ImageButton
                        android:id="@+id/discussionSend"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="@string/discussion_send"
                        app:tint="@color/home_nav_active" />
                </LinearLayout>

                <TextView
                    android:id="@+id/discussionsEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/discussions_empty"
                    android:textColor="@color/home_text_secondary"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/discussionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavContainer"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
