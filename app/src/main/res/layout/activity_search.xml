<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:paddingTop="16dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_search"
                android:textColor="@color/home_text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/search_filters"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/search_label_name"
                android:textColor="@color/home_text_secondary"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@color/home_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/searchName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_name_hint"
                    android:textColor="@color/home_text_primary"
                    android:textColorHint="@color/home_text_hint"
                    android:inputType="text" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/search_label_tags"
                android:textColor="@color/home_text_secondary"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@color/home_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <AutoCompleteTextView
                    android:id="@+id/searchTags"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_tags_hint"
                    android:textColor="@color/home_text_primary"
                    android:textColorHint="@color/home_text_hint"
                    android:inputType="text" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/search_label_developer"
                android:textColor="@color/home_text_secondary"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@color/home_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/searchDeveloper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_developer_hint"
                    android:textColor="@color/home_text_primary"
                    android:textColorHint="@color/home_text_hint"
                    android:inputType="text" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/audience_score"
                    android:textColor="@color/home_text_primary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/ratingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_rating_any"
                    android:textColor="@color/home_text_secondary"
                    android:textSize="13sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/ratingSeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:thumbTint="@color/home_nav_active"
                android:progressTint="@color/home_nav_active"
                android:progressBackgroundTint="@color/home_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/home_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/search_results"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/searchProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:indicatorColor="@color/home_icon_tint" />

            <TextView
                android:id="@+id/searchEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/home_text_secondary"
                android:text="@string/home_empty_filter"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavContainer"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
