<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:paddingTop="16dp">

    <ImageButton
        android:id="@+id/reviewBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_left"
        app:tint="@color/home_icon_tint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/review_back" />

    <ImageButton
        android:id="@+id/reviewSubmit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_check"
        app:tint="@color/home_nav_active"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/review_submit" />

    <LinearLayout
        android:id="@+id/reviewHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/reviewBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/reviewCover"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:background="@color/home_card"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            android:contentDescription="@string/content_desc_game_cover" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/reviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/home_text_primary"
                android:textSize="18sp"
                android:text="@string/game_title_placeholder" />

            <TextView
                android:id="@+id/reviewDeveloper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/home_text_secondary"
                android:textSize="13sp"
                android:text="@string/developer_placeholder" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/home_divider"
        app:layout_constraintTop_toBottomOf="@id/reviewHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ratingRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/reviewHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/starContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reviewStar1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@string/review_rate" />

            <ImageView
                android:id="@+id/reviewStar2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@string/review_rate" />

            <ImageView
                android:id="@+id/reviewStar3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@string/review_rate" />

            <ImageView
                android:id="@+id/reviewStar4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@string/review_rate" />

            <ImageView
                android:id="@+id/reviewStar5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="@string/review_rate" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/review_rate"
            android:textColor="@color/home_text_primary"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/reviewLike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_outline"
            android:contentDescription="@string/btn_like"
            app:tint="@color/home_icon_tint" />
    </LinearLayout>

    <EditText
        android:id="@+id/reviewInput"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@color/home_surface"
        android:padding="12dp"
        android:textColor="@color/home_text_primary"
        android:textColorHint="@color/home_text_hint"
        android:gravity="top|start"
        android:hint="@string/review_add_review"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/ratingRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/bottomNavContainer"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
